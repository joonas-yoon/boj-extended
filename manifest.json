{
  "name": "BOJ Extended",
  "description": "백준 온라인 저지(BOJ)를 확장된 기능과 함께 사용해보세요.",
  "version": "1.7.1",
  "manifest_version": 2,
  "background": {
    "scripts": ["js/background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["https://www.acmicpc.net/?", "https://www.acmicpc.net/*"],
      "all_frames": true,
      "css": ["css/common.css", "css/theme-dark.css"],
      "run_at": "document_start",
      "js": [
        "js/constants.js",
        "js/config.js",
        "js/utils.js",
        "js/theme.js",
        "js/wide.js",
        "js/db.js"
      ]
    },
    {
      "matches": ["https://www.acmicpc.net/?", "https://www.acmicpc.net/*"],
      "all_frames": true,
      "js": [
        "js/status.js",
        "js/notifications.js",
        "js/problem.js",
        "js/vs.js",
        "js/user.js",
        "js/board.js",
        "js/group.js",
        "js/search.js",
        "js/setting.js",
        "js/global.js",
        "js/main.js",
        "js/ga.js"
      ]
    }
  ],
  "options_ui": {
    "page": "options/option.html",
    "open_in_tab": true
  },
  "web_accessible_resources": [
    "css/status.css",
    "css/user.css",
    "js/status-rte.js"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["storage"],
  "content_security_policy": "script-src 'self' https://www.googletagmanager.com https://code.jquery.com; object-src 'self'"
}
